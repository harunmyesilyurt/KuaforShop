<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KuaforShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KuaforShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-gradient shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-cut me-2"></i>
                    KuaforShop
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Ana Sayfa
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Index">
                                    <i class="fas fa-users me-1"></i> Kullanıcılar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Saloon" asp-action="Index">
                                    <i class="fas fa-store me-1"></i> Salonlar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Employee" asp-action="Index">
                                    <i class="fas fa-user-tie me-1"></i> Çalışanlar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Service" asp-action="Index">
                                    <i class="fas fa-concierge-bell me-1"></i> Hizmetler
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointment" asp-action="Index">
                                    <i class="fas fa-calendar-check me-1"></i> Randevular
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Saloon" asp-action="List">
                                    <i class="fas fa-store me-1"></i> Salonlarımız
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointment" asp-action="MyAppointments">
                                    <i class="fas fa-calendar-alt me-1"></i> Randevularım
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user me-1"></i> @User.Identity.Name
                                </a>
                                <div class="dropdown-menu dropdown-menu-end">
                                    @* <a class="dropdown-item" asp-controller="User" asp-action="Profile"> *@
                                    @*     <i class="fas fa-user-cog me-1"></i> Profil *@
                                    @* </a> *@
                                    @* <div class="dropdown-divider"></div> *@
                                    <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-1"></i> Çıkış
                                    </a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="nav-link btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Giriş
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-light btn-sm text-dark" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i> Kayıt Ol
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - KuaforShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
