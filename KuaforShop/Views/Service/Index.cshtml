@model IEnumerable<KuaforShop.Application.DTOs.ServiceDTOs.ServiceDTO>

<h2>Hizmetler</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Hizmet</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Hizmet Adı</th>
            <th>Fiyat</th>
            <th>Süre</th>
            <th>Süre Tipi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Price.ToString("C2")</td>
                <td>@service.Duration</td>
                <td>@service.DurationType</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-danger"
                       onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table> 