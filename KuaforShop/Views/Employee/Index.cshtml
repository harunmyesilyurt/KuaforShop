@model IEnumerable<KuaforShop.Application.DTOs.EmployeeDTOs.EmployeeDTO>

<h2>Çalışanlar</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Çalışan</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>Cinsiyet</th>
            @* <th>Rol</th> *@
            <th>Başlangıç Saati</th>
            <th>Bitiş Saati</th>
            <th>Çalışma Günleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Surname</td>
                <td>@employee.Username</td>
                <td>@(employee.Sex ? "Erkek" : "Kadın")</td>
                @* <td>@employee.Role</td> *@
                <td>@employee.BeginTime.ToString("HH:mm")</td>
                <td>@employee.EndTime.ToString("HH:mm")</td>
                <td>@employee.WorkDays</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger"
                       onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table> 