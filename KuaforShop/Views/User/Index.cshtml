@model IEnumerable<KuaforShop.Application.DTOs.UserDTOs.UserDTO>

<h2>Kullanıcılar</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Kullanıcı</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            @* <th>E-posta</th> *@
            @* <th>Telefon</th> *@
            <th>Cinsiyet</th>
            @* <th>Rol</th> *@
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                @* <td>@user.Email</td> *@
                @* <td>@user.Phone</td> *@
                <td>@(user.Sex ? "Erkek" : "Kadın")</td>
                @* <td>@user.Role ? </td> *@
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger"
                       onclick="return confirm('Silmek istediğinize emin misiniz?')">
                        <i class="fas fa-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table> 