@model IEnumerable<KuaforShop.Application.DTOs.SaloonDTOs.SaloonDTO>

<h2>Salonlarımız</h2>

<div class="row">
    @foreach (var saloon in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@saloon.Name</h5>
                    <p class="card-text">
                        <strong>Adres:</strong> @saloon.Address<br />
                        <strong>Telefon:</strong> @saloon.Phone<br />
                        <strong>Çalışma Saatleri:</strong> @saloon.OpenTime.ToString("HH:mm") - @saloon.CloseTime.ToString("HH:mm")<br />
                        <strong>Çalışma Günleri:</strong> @saloon.WorkDays
                    </p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Appointment" asp-action="Create" asp-route-saloonId="@saloon.Id" class="btn btn-primary">
                            Randevu Al
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-info">
                            Randevu için Giriş Yapın
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div> 